{% extends "base.htm" %}

{% block pageheader %}
Editing SOA Details for {{ zone_name }} 
{% endblock pageheader %}

{% block body %}
<form action="/savesoa/{{zone_name }}/" method="post" class="listform" name="soaform">
{% csrf_token %}
    <div>
        <div class="even">
            <div name="soa_fields" class="tableform">
    <input name="soa_fields.zone" type="hidden" class="hiddenfield requiredfield" value={{zone_name }} id="soaform_soa_fields_zone">
    <table>
    <tbody>
        <tr class="even ">
            <th>
                <label class="fieldlabel" for="soaform_soa_fields_mname">MNAME</label>
            </th>
            <td>
                <input name="soa_fields.mname" type="text" class="textfield requiredfield" value={{soa_fields.mname }} id="soaform_soa_fields_mname">
                <span class="fieldhelp">Primary master server.</span>
            </td>
        </tr><tr class="odd ">
            <th>
                <label class="fieldlabel" for="soaform_soa_fields_rname">RNAME</label>
            </th>
            <td>
                <input name="soa_fields.rname" type="text" class="textfield requiredfield" value={{soa_fields.rname }} id="soaform_soa_fields_rname">
                <span class="fieldhelp">Admin e-mail address.</span>
            </td>
        </tr><tr class="even ">
            <th>
                <label class="fieldlabel" for="soaform_soa_fields_serial">Serial</label>
            </th>
            <td>
                <input name="soa_fields.serial" type="text" class="textfield requiredfield" value={{soa_fields.serial }} id="soaform_soa_fields_serial">
                <span class="fieldhelp">Serial number of this zone.</span>
            </td>
        </tr><tr class="odd ">
            <th>
                <label class="fieldlabel" for="soaform_soa_fields_refresh">Refresh</label>
            </th>
            <td>
                <input name="soa_fields.refresh" type="text" class="textfield requiredfield" value={{ soa_fields.refresh }} id="soaform_soa_fields_refresh">
                <span class="fieldhelp">Refresh interval in seconds.</span>
            </td>
        </tr><tr class="even ">
            <th>
                <label class="fieldlabel" for="soaform_soa_fields_retry">Retry</label>
            </th>
            <td>
                <input name="soa_fields.retry" type="text" class="textfield requiredfield" value={{ soa_fields.retry }} id="soaform_soa_fields_retry">
                <span class="fieldhelp">Retry interval in seconds.</span>
            </td>
        </tr><tr class="odd ">
            <th>
                <label class="fieldlabel" for="soaform_soa_fields_expire">Expire</label>
            </th>
            <td>
                <input name="soa_fields.expire" type="text" class="textfield requiredfield" value={{ soa_fields.expire  }} id="soaform_soa_fields_expire">
                <span class="fieldhelp">Expire interval in seconds.</span>
            </td>
        </tr><tr class="even ">
            <th>
                <label class="fieldlabel" for="soaform_soa_fields_minttl">Min TTL</label>
            </th>
            <td>
                <input name="soa_fields.minttl" type="text" class="textfield requiredfield" value={{soa_fields.minttl  }} id="soaform_soa_fields_minttl">
                <span class="fieldhelp">Minimum Time-To-Live in seconds.</span>
            </td>
        </tr>
        <tr>
            <td> </td>
        </tr>
    </tbody>
    </table>
</div>
        </div><div class="odd">
            <label class="fieldlabel" for="soaform_cancel">Cancel all changes</label>
            <input name="cancel" type="submit" class="submitbutton" value="Cancel" id="soaform_cancel">
        </div>
        <div><input type="submit" class="submitbutton" value="Save"></div>
    </div>
</form></p>

{% endblock body %}
